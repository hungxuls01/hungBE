                            {
                                var getid2 = new ProductGetbyId();
                                getid2.id = obj.id;
                                var datagetid2 = _ProductDal.GetCompany(getid2);
                                SendMail.sendMailByType(datagetid2.email, new string[] { "SDY Admin" }, "29");
